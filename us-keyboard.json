{
  "title": "JIS キーボード使いの ASCII 配列な環境向けの設定",
  "rules": [
    {
      "description": "刻印どおりに入力されるようにする",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "2", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "quote", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "6", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "7", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "7", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "quote" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "8", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "9", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "9", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "0", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "hyphen", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "equal_sign" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "equal_sign" },
          "to": [ { "key_code": "6", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "equal_sign", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "international3" },
          "to": [ { "key_code": "backslash" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "international3", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "backslash", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "open_bracket" },
          "to": [ { "key_code": "2", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "open_bracket", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "close_bracket", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "open_bracket", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "close_bracket" },
          "to": [ { "key_code": "open_bracket"  } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon",  "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "equal_sign", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "quote" },
          "to": [ { "key_code": "semicolon", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "quote", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "8",     "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "backslash" },
          "to": [ { "key_code": "close_bracket" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "backslash", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "close_bracket", "modifiers": [ "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "international1", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "hyphen", "modifiers": [ "shift" ] } ]
        }
      ]
    },
    {
      "description": "英数/かなでローマ字/かな入力を切り替える（ことえり）",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "lang1" },
          "to": [ { "key_code": "j", "modifiers": [ "control", "shift" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "lang2" },
          "to": [ { "key_code": "semicolon", "modifiers": [ "control", "shift" ] } ]
        }
      ]
    },
    {
      "description": "英数/かなでローマ字/かな入力を切り替える（Windows IME）",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "lang1" },
          "to": [ { "key_code": "grave_accent_and_tilde", "modifiers": [ "option" ] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "lang2" },
          "to": [ { "key_code": "grave_accent_and_tilde", "modifiers": [ "option" ] } ]
        }
      ]
    }
  ]
}
